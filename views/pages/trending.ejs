<!-- views/pages/trending.ejs -->
<main>
    <h1>Trending News</h1>
    <% if (trendingNews.length > 0) { %>
        <ul>
            <% trendingNews.forEach(article => { %>
                <li>
                    <a href="/news/<%= article._id %>">
                        <h2><%= article.title %></h2>
                    </a>
                    <p><%= article.content.substring(0, 150) %>...</p>
                    <p><strong>Comments: </strong><%= article.commentsCount %> | <strong>Likes: </strong><%= article.likesCount %></p>
                </li>
            <% }) %>
        </ul>
    <% } else { %>
        <p>No trending news available.</p>
    <% } %>

    <!-- Pagination Controls -->
    <div class="pagination">
        <% if (currentPage > 1) { %>
            <a href="/trending?page=<%= currentPage - 1 %>">Previous</a>
        <% } %>

        <% for (let i = 1; i <= totalPages; i++) { %>
            <a href="/trending?page=<%= i %>" class="<%= i === currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <% if (currentPage < totalPages) { %>
            <a href="/trending?page=<%= currentPage + 1 %>">Next</a>
        <% } %>
    </div>
</main>


