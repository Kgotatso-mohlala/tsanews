<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confession Details</title>
</head>
<body>
    <h1>Confession Details</h1>
    <p><strong>Author:</strong> <%= confession.author %></p>
    <p><%= confession.content %></p>

    <h3>Comments</h3>
    <ul>
        <% comments.forEach(comment => { %>
            <li><strong><%= comment.author %>:</strong> <%= comment.content %></li>
        <% }) %>
    </ul>

    <!-- Comment form -->
    <form action="/confessions/<%= confession._id %>/comment" method="POST">
        <textarea name="content" placeholder="Write your comment here..." required></textarea>
        <button type="submit">Post Comment</button>
    </form>

</body>
</html>
