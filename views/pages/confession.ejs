<!-- views/pages/confessionDetails.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confession Details</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        /* Global Styles */
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f4f7fc;
            color: #333;
            margin: 0;
            padding: 0;
        }

        .confession-container {
            background: #fff;
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        }

        /* Confession Content */
        .confession-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .confession-header h1 {
            font-size: 2.8rem;
            color: #2d3e50;
            font-weight: 700;
        }

        .confession-header p {
            color: #6c757d;
            font-size: 1.1rem;
        }

        .confession-body {
            font-size: 1.25rem;
            line-height: 1.6;
            color: #333;
            margin-bottom: 30px;
        }

        .author-name {
            font-size: 1.2rem;
            color: #007bff;
            font-weight: 500;
            margin-bottom: 20px;
        }

        .comments-section {
            margin-top: 40px;
        }

        .comments-section h3 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #2d3e50;
        }

        /* Comment Card */
        .comment-card {
            background-color: #f8f9fa;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

        .comment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .comment-author {
            font-weight: 600;
            color: #007bff;
            font-size: 1.1rem;
        }

        .comment-content {
            margin-top: 10px;
            font-size: 1.1rem;
            color: #555;
        }

        .comment-form {
            margin-top: 30px;
            background: #f1f1f1;
            padding: 20px;
            border-radius: 8px;
        }

        .comment-form textarea {
            width: 100%;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            font-size: 1.1rem;
            resize: vertical;
        }

        .comment-form button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            font-size: 1.2rem;
            margin-top: 10px;
            transition: background-color 0.3s ease;
        }

        .comment-form button:hover {
            background-color: #0056b3;
            cursor: pointer;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .confession-container {
                padding: 20px;
            }

            .confession-header h1 {
                font-size: 2.2rem;
            }

            .confession-header p {
                font-size: 1rem;
            }

            .confession-body {
                font-size: 1.1rem;
            }

            .comment-form button {
                width: 100%;
                font-size: 1rem;
            }

            .comment-card {
                padding: 15px;
            }

            .comment-author {
                font-size: 1rem;
            }

            .comment-content {
                font-size: 1rem;
            }
        }
    </style>

</head>

<body>

    <div class="confession-container">
        <button class="back-button" onclick="window.history.back()">
            <i class="fas fa-arrow-left"></i> Back
        </button>
        <!-- Confession Content -->
        <div class="confession-header">
            <h1>Confession Details</h1>
            <p class="author-name"><%= confession.author || 'Anonymous' %> - <small>Posted on <%= confession.createdAt.toLocaleDateString() %></small></p>
        </div>

        <div class="confession-body">
            <p><%= confession.content %></p>
        </div>

        <!-- Comments Section -->
        <div class="comments-section">
            <h3>Comments</h3>

            <!-- Display Comments -->
            <% comments.forEach(comment => { %>
                <div class="comment-card">
                    <p class="comment-author"><%= comment.author || 'Anonymous' %>:</p>
                    <p class="comment-content"><%= comment.content %></p>
                </div>
            <% }) %>

            <!-- Comment Form -->
            <form action="/confessions/<%= confession._id %>/comment" method="POST" class="comment-form">
                <textarea name="content" placeholder="Write your comment here..." required></textarea>
                <button type="submit">Post Comment</button>
            </form>
        </div>

    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
