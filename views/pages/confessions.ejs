<!-- views/pages/confessions.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confessions</title>
    <!-- FontAwesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    
    <style>
        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 20px;
        }

        /* New Confession Button */
        .submit-btn-container {
            text-align: center;
            margin-bottom: 40px;
        }

        .submit-btn {
            font-size: 1.2rem;
            padding: 15px 25px;
            border: none;
            background-color: #5c6bc0;
            color: #fff;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

        .submit-btn:hover {
            background-color: #3949ab;
            cursor: pointer;
        }

        /* Confession Cards Container */
        .confession-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin-bottom: 30px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .confession-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }

        .confession-card-header {
            background-color: #3949ab;
            color: #fff;
            padding: 20px;
            text-align: center;
            font-size: 1.3rem;
            font-weight: 600;
            text-transform: capitalize;
        }

        .confession-card-body {
            padding: 20px;
            font-size: 1rem;
            color: #555;
        }

        .confession-card-body p {
            line-height: 1.6;
        }

        .view-more {
            text-decoration: none;
            color: #5c6bc0;
            font-weight: 600;
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .view-more:hover {
            color: #3949ab;
            text-decoration: underline;
        }

        /* No Confessions Message */
        .no-confessions {
            text-align: center;
            color: #888;
            font-size: 1.2rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .confession-card {
                margin-bottom: 20px;
            }

            h2 {
                font-size: 2rem;
            }

            .submit-btn {
                font-size: 1rem;
                padding: 12px 22px;
            }
        }

        /* Confession Hover Animation */
        @keyframes confessionHover {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.02);
            }
            100% {
                transform: scale(1);
            }
        }

        .confession-card:hover {
            animation: confessionHover 0.5s ease-in-out;
        }
    </style>
</head>

<body>

    <%- include("../partials/_topbar.ejs") %>
    <!-- Navbar Section -->
    <%- include("../partials/_nav.ejs") %>
    <!-- Hero Section -->
    <section  id="page-hero">
    </section>

    <div class="container">
        <!-- Page Title -->
        <h2 class="section-title">Confessions</h2>

        <!-- New Confession Button -->
        <div class="submit-btn-container">
            <a href="/confessions/create" class="submit-btn">Submit New Confession</a>
        </div>

        <!-- Confessions List -->
        <% if (confessions.length > 0) { %>
            <div class="row">
                <% confessions.forEach((confession) => { %>
                    <div class="col-md-4">
                        <div class="confession-card">
                            <div class="confession-card-header">
                                <strong><%= confession.author || 'Anonymous' %></strong>
                            </div>
                            <div class="confession-card-body">
                                <p><%= confession.content.substring(0, 150) %>...</p>
                                <a href="/confessions/<%= confession._id %>" class="view-more">Read More <i class="fas fa-arrow-right"></i></a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <p class="no-confessions">No confessions found. Be the first to share!</p>
        <% } %>

    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/script.js"></script>
</body>

</html>
