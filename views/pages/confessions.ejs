<!-- views/pages/confessions.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confessions</title>
</head>
<body>
    <h2>Confessions</h2>
    <a href="/confessions/create">Submit New Confession</a> <!-- Link to submit a new confession -->
    <ul>
        <% confessions.forEach((confession) => { %>
            <li>
                <a href="/confessions/<%= confession._id %>"><%= confession.content.substring(0, 100) %>...</a>
            </li>
        <% }); %>
    </ul>
</body>
</html>
