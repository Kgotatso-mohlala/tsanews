<!-- views/pages/home.ejs -->
<h1>Welcome to the Home Page</h1>

<h2>Trending News</h2>

<% if (trendingNews.length > 0) { %>
    <ul>
        <% trendingNews.forEach(news => { %>
            <li>
                <h3><a href="/news/<%= news._id %>"><%= news.title %></a></h3>
                <p><%= news.content.substring(0, 100) %>...</p>
                <p><%= news.likes %> Likes</p>

                <!-- Show image if available -->
                <% if (news.imagePath) { %>
                    <img src="<%= news.imagePath %>" alt="Article Image" width="200">
                <% } %>
            </li>
        <% }) %>
    </ul>
<% } else { %>
    <p>No trending news available.</p>
<% } %>
