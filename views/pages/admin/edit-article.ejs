<!-- views/pages/admin/edit-article.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Article</title>
</head>
<body>
    <h2>Edit Article</h2>
    <!-- views/pages/admin/edit-article.ejs -->
<form action="/admin/articles/edit-article/<%= article._id %>" method="POST" enctype="multipart/form-data">
    <label for="title">Title:</label>
    <input type="text" name="title" value="<%= article.title %>" required>
    
    <label for="content">Content:</label>
    <textarea name="content" required><%= article.content %></textarea>
    
    <label for="author">Author:</label>
    <input type="text" name="author" value="<%= article.author %>" required>
    
    <label for="image">Upload Image:</label>
    <input type="file" name="image" id="image" accept="image/*">
    
    <% if (article.image) { %>
        <div>
            <img src="<%= article.image %>" alt="Article Image" style="width: 100px; height: 100px;">
        </div>
    <% } %>
    
    <button type="submit">Update Article</button>
</form>

</body>
</html>
