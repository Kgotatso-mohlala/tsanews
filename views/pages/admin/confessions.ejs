<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin - Confessions</title>
</head>
<body>
    <h1>Confessions Pending Approval</h1>
    <ul>
        <% confessions.forEach(function(confession) { %>
            <li>
                <p><%= confession.content %></p>
                <form action="/admin/confessions/<%= confession._id %>/approve" method="POST">
                    <button type="submit">Approve</button>
                </form>
                <form action="/admin/confessions/<%= confession._id %>/reject" method="POST">
                    <button type="submit">Reject</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
