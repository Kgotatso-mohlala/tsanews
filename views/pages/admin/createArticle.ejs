</head>
<body>
    <div class="dashboard-container">
        <h2>Create New Article</h2>
        <form action="/admin/news/create" method="POST" enctype="multipart/form-data" class="create-article-form">
            <div class="form-group">
                <label for="title">Title:</label>
                <input type="text" name="title" id="title" required class="form-input">
            </div>

            <div class="form-group">
                <label for="content">Content:</label>
                <textarea name="content" id="content" required class="form-input"></textarea>
            </div>

            <div class="form-group">
                <label for="author">Author:</label>
                <input type="text" name="author" id="author" required class="form-input">
            </div>

            <div class="form-group">
                <label for="image">Upload Image:</label>
                <input type="file" name="image" id="image" accept="image/*" class="form-input">
            </div>

            <button type="submit" class="btn-submit">Create Article</button>
        </form>
    </div>
</body>
