<!-- views/pages/confess.ejs -->

<h2>Confess</h2>
<p>Want to share a confession anonymously? Use the form below to submit your confession.</p>

<form action="/confess" method="POST">
    <div class="form-group">
        <label for="author">Your Name (Optional):</label>
        <input type="text" id="author" name="author" class="form-control">
    </div>
    <div class="form-group">
        <label for="content">Your Confession:</label>
        <textarea id="content" name="content" class="form-control" rows="5"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Confession</button>
</form>
