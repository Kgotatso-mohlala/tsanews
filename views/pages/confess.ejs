<!-- views/pages/confess.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confess Anonymously</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <style>
        .confess-container {
            display: flex;
            justify-content: center;
            align-items: flex-start;
            margin-top: 40px;
        }

        /* Form Styling */
        .confess-form {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 600px;
            position: relative;
        }

        .confess-form::before {
            content: "";
            position: absolute;
            top: -25px;
            left: 50%;
            transform: translateX(-50%);
            border-left: 30px solid transparent;
            border-right: 30px solid transparent;
            border-bottom: 25px solid #fff;
        }

        .confess-form h1 {
            color: #333;
            font-size: 2.2rem;
            font-weight: bold;
            margin-bottom: 15px;
        }

        .confess-form p {
            color: #555;
            font-size: 1rem;
            margin-bottom: 30px;
        }

        .form-group {
            position: relative;
            margin-bottom: 30px;
        }

        .form-label {
            color: #333;
            font-weight: bold;
            font-size: 1rem;
            margin-bottom: 8px;
            display: block;
        }

        .form-control {
            background: #f4f5f6;
            border: 1px solid #ddd;
            border-radius: 10px;
            padding: 15px;
            font-size: 1rem;
            width: 100%;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.2);
            outline: none;
        }

        .form-control::placeholder {
            color: #999;
            font-style: italic;
        }

        .btn-submit {
            background: #007bff;
            color: white;
            padding: 15px;
            border: none;
            border-radius: 50px;
            font-size: 1.1rem;
            width: 100%;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .btn-submit:hover {
            background: #0056b3;
        }

        /* Contact Details Styling */
        .contact-details {
            background: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            margin-left: 40px;
            flex: 1;
            width: 100%;
            max-width: 400px;
        }

        .contact-details h2 {
            font-size: 2rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
        }

        .contact-details .contact-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            color: #555;
        }

        .contact-details i {
            font-size: 1.5rem;
            color: #007bff;
            margin-right: 15px;
        }

        /* Responsive Layout */
        @media (max-width: 768px) {
            .confess-container {
                flex-direction: column;
                align-items: center;
            }

            .contact-details {
                margin-left: 0;
                margin-top: 30px;
            }
        }
    </style>
</head>

<body>
    <%- include("../partials/_topbar.ejs") %>
    <!-- Navbar Section -->
    <%- include("../partials/_nav.ejs") %>
    <!-- Hero Section -->
    <section  id="page-hero">
    </section>
    <div class="container pb-5">
        <div class="confess-container">
            <!-- Confession Form -->
            <div class="confess-form">
                <h1 class="text-primary">Confess Anonymously</h1>
                <p class="lead">Share your thoughts with the world, anonymously. Let it out!</p>

                <!-- Confession Form -->
                <form action="/confess" method="POST" class="form" novalidate onsubmit="return validateForm()">
                    <!-- Author Name (Optional) -->
                    <div class="form-group">
                        <label for="author" class="form-label">Your Name (Optional):</label>
                        <input type="text" id="author" name="author" class="form-control" placeholder="Enter your name (optional)" value="Anonymous">
                    </div>

                    <!-- Confession Content -->
                    <div class="form-group">
                        <label for="content" class="form-label">Your Confession:</label>
                        <textarea id="content" name="content" class="form-control" rows="5" placeholder="Write your confession here..." required></textarea>
                    </div>

                    <!-- Submit Button -->
                    <button type="submit" class="btn-submit">Submit Confession</button>
                </form>
            </div>

            <!-- Contact Details -->
            <div class="contact-details">
                <h2>Contact Information</h2>

                <div class="contact-item">
                    <i class="fas fa-envelope"></i>
                    <span>Email: support@confessapp.com</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone-alt"></i>
                    <span>Phone: +123 456 7890</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-map-marker-alt"></i>
                    <span>Address: 123 Confession St, City, Country</span>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Validate form (content must be filled)
        function validateForm() {
            var content = document.getElementById('content');
            if (content.value.trim() === "") {
                content.classList.add('is-invalid');
                return false;
            }
            return true;
        }
    </script>
    <script src="js/script.js"></script>
</body>

</html>
